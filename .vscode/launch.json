{
    "version": "0.2.0",
    "configurations": [{
        
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/www/cgi-bin/get.fcgi",
            "args": ["test/problem.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [{"name":"QUERY_STRING","value":"keyword=李克强山东"}],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            }
        },
        {
            "name": "C++ Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceRoot}/www/cgi-bin/get.fcgi",
            "processId": "${command.pickProcess}",
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            }
        }
    ]
}